{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./node_modules/@dbspt/byte-core",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["./node_modules/"]
}
